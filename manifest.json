{
  "manifest_version": 3,
  "name": "BMC Helix Ticket Monitor",
  "version": "1.0.0",
  "description": "Monitor unassigned BMC Helix tickets with real-time updates and automatic detail scraping",
  
  "permissions": [
    "storage",
    "notifications",
    "sidePanel",
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://house-smartit.fed.onbmc.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://house-smartit.fed.onbmc.com/smartit/app/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "BMC Helix Monitor"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
